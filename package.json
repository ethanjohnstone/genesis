{
  "name": "app",
  "version": "1.0.0",
  "author": "NikxDa",
  "public": false,
  "scripts": {
    "build:js": "esbuild app/javascript/main.ts --bundle --outfile=public/javascript/main.js --minify",
    "build:css": "tailwindcss -i app/css/app.css -o public/css/app.css --minify",
    "build:copy": "concurrently npm:copy:*",
    "build": "concurrently npm:build:*",
    "watch:js": "esbuild app/javascript/main.ts --bundle --outfile=public/javascript/main.js --sourcemap --watch",
    "watch:css": "tailwindcss -i app/css/app.css -o public/css/app.css --watch",
    "watch:copy": "nodemon --watch app/images --ext '*' -x \"npm run copy:images\"",
    "watch": "concurrently npm:watch:* livereload",
    "copy:images": "rm -r public/images && copyfiles -u 2 app/images/**/* public/images",
    "copy:editorcss": "copyfiles -u 2 app/css/editor.css public/css",
    "livereload": "livereload public/"
  },
  "dependencies": {
    "minireset.css": "^0.0.7",
    "react": "^18",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.15.10",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  }
}
